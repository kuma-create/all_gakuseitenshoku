{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/next/types"
    ],
    "types": [
      "node",
      "next"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "apps/web/*"
      ],
      "@/app/*": [
        "apps/web/app/*"
      ],
      "@/components/*": [
        "apps/web/components/*"
      ],
      "@/lib/*": [
        "apps/web/lib/*"
      ],
      "@/utils/*": [
        "apps/web/utils/*"
      ],
      "@/styles/*": [
        "apps/web/styles/*"
      ]
    }
  },
  "include": [
    "apps/web/next-env.d.ts",
    "apps/web/**/*.ts",
    "apps/web/**/*.tsx",
    "apps/web/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
